{
  "name": "frontend-boilerplate",
  "private": true,
  "version": "0.0.1",
  "description": "Template for front-end developers",
  "main": "index.js",
  "scripts": {
    "spritesmith": "node_modules/.bin/spritesmith",
    "lint:html": "node scripts/htmllint ./src/index.html",
    "lint:css": "stylelint ./src/**/*.css",
    "lint:scss": "sass-lint -c .sasslintrc ./src/**/*.scss -v -q",
    "lint:js": "eslint ./src/**/*.js",
    "lint": "npm run lint:html&npm run lint:css&npm run lint:scss&npm run lint:js",
    "start": "esw ./src/**/*.js -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ephim64/webpack-configs.git"
  },
  "author": "Ephim Gotsco",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ephim64/webpack-configs/issues"
  },
  "homepage": "https://github.com/ephim64/webpack-configs#readme",
  "devDependencies": {
    "babel-eslint": "^8.0.3",
    "chalk": "2.3.0",
    "eslint": "4.18.2",
    "eslint-watch": "^3.1.3",
    "htmllint": "0.6.0",
    "node-sass": "4.13.1",
    "sass-lint": "1.12.1",
    "spritesmith": "3.1.1",
    "spritesmith-cli": "1.1.2",
    "stylelint": "8.1.1"
  }
}
